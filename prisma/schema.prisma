// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Link {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  longUrl  String
  shortUrl String @unique
  clicks   Int @default(0)
}
